<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/tab_book"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/tab_book_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/tab_book_press"
            android:clickable="false" />

        <TextView
            android:id="@+id/tab_book_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预订"
            android:layout_marginTop="3dp"
            android:textColor="@color/main_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_activity"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/tab_activity_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/tab_activity_selector"
            android:clickable="false" />

        <TextView
            android:id="@+id/tab_activity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动"
            android:layout_marginTop="3dp"
            android:textColor="@color/tab_text_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_coach"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/tab_coach_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/tab_coach_selector"
            android:clickable="false" />

        <TextView
            android:id="@+id/tab_coach_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="教练"
            android:layout_marginTop="3dp"
            android:textColor="@color/tab_text_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_mine"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/tab_mine_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/tab_mine_selector"
            android:clickable="false" />

        <TextView
            android:id="@+id/tab_mine_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我"
            android:layout_marginTop="3dp"
            android:textColor="@color/tab_text_color" />
    </LinearLayout>

</LinearLayout>