<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="@drawable/popular_view_bg"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >

    <com.huiyoumall.uu.image.SmartImageView
        android:id="@+id/merchant_img"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:src="@drawable/image_empty_bg" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/merchant_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:text="TT健身会所"
            android:textColor="@color/text_home_color"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/merchant_place"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:text="【碧水龙庭】"
            android:textColor="@color/main_text_dark"
            android:textSize="@dimen/text_size_14" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/merchant_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/ic_distance"
                android:text="15.25km"
                android:textColor="@color/main_text_dark"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>