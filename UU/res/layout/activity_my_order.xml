<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical">
	<include layout="@layout/title_court_choose"/>
	<com.huiyoumall.uu.widget.EmptyLayout
		android:id="@+id/my_order_empter_view" android:layout_width="fill_parent"
		android:layout_height="fill_parent">
	</com.huiyoumall.uu.widget.EmptyLayout> 
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:orientation="vertical">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="45dp" android:baselineAligned="false"
			android:orientation="horizontal">
			<LinearLayout android:id="@+id/not_pay_lin_view"
				android:layout_width="0dp" android:layout_height="fill_parent"
				android:layout_weight="1.0" android:background="@drawable/popular_view_bg"
				android:gravity="center">
				<TextView android:id="@+id/my_not_pay_text"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_marginLeft="10dip" android:drawablePadding="8dp"
					android:text="未付款" android:textColor="@color/subscribe_item_text_color"
					android:textSize="@dimen/text_size_18"/>
			</LinearLayout>
			<View android:layout_width="0.5dp" android:layout_height="match_parent"
				android:background="@color/list_divider"/>
			<LinearLayout android:id="@+id/is_pay_lin_view"
				android:layout_width="0dp" android:layout_height="fill_parent"
				android:layout_weight="1.0" android:background="@drawable/popular_view_bg"
				android:gravity="center">
				<TextView android:id="@+id/my_is_pay_text"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_marginLeft="10dip" android:drawablePadding="8dp"
					android:text="已付款" android:textColor="@color/subscribe_item_text_color"
					android:textSize="@dimen/text_size_18"/>
			</LinearLayout>
			<View android:layout_width="0.5dp" android:layout_height="match_parent"
				android:background="@color/list_divider"/>
			<LinearLayout android:id="@+id/complete_pay_view"
				android:layout_width="0dp" android:layout_height="fill_parent"
				android:layout_weight="1.0" android:background="@drawable/popular_view_bg"
				android:gravity="center">
				<TextView android:id="@+id/complete_order_text"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_marginLeft="10dip" android:drawablePadding="8dp"
					android:text="已取消" android:textColor="@color/subscribe_item_text_color"
					android:textSize="@dimen/text_size_18"/>
			</LinearLayout>
		</LinearLayout>
		<View android:layout_width="fill_parent" android:layout_height="0.5dp"
			android:background="@color/list_divider"/>
		<android.support.v4.view.ViewPager
			android:id="@+id/my_order_viewpager" android:layout_width="match_parent"
			android:layout_height="fill_parent" android:visibility="visible"/>
	</LinearLayout>
</LinearLayout>