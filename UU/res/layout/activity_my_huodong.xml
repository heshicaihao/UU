<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_activity" />

    <com.huiyoumall.uu.widget.EmptyLayout
        android:id="@+id/my_act_empter_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </com.huiyoumall.uu.widget.EmptyLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/my_post_events_view"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/popular_view_bg"
                android:gravity="center" >

                <TextView
                    android:id="@+id/my_post_events_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:drawablePadding="8dp"
                    android:text="@string/my_post_events"
                    android:textColor="@color/subscribe_item_text_color"
                    android:textSize="@dimen/text_size_18" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/list_divider" />

            <LinearLayout
                android:id="@+id/take_part_in_view"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/popular_view_bg"
                android:gravity="center" >

                <TextView
                    android:id="@+id/take_part_in_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:drawablePadding="8dp"
                    android:text="@string/take_part_in"
                    android:textColor="@color/subscribe_item_text_color"
                    android:textSize="@dimen/text_size_18" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/list_divider" />

            <LinearLayout
                android:id="@+id/complete_huodong_view"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/popular_view_bg"
                android:gravity="center" >

                <TextView
                    android:id="@+id/complete_huodong_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:drawablePadding="8dp"
                    android:text="@string/complete_huodong"
                    android:textColor="@color/subscribe_item_text_color"
                    android:textSize="@dimen/text_size_18" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/list_divider" />

        <android.support.v4.view.ViewPager
            android:id="@+id/my_act_viewpager"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>