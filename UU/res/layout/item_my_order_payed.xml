<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/peyed_yundong_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_home_color"
            android:textSize="@dimen/text_size_16"
            android:text="UU运动.前进羽毛球馆" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/text_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="未消费"
            android:textColor="@color/text_black" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/text_black" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
         >

        <TextView
            android:id="@+id/peyed_authcode_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/peyed_xiangmu_value_text"
            android:layout_alignBottom="@+id/peyed_xiangmu_value_text"
            android:layout_alignParentRight="true"
            android:text="629039" />

        <TextView
            android:id="@+id/peyed_authcode_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/peyed_authcode_value_text"
            android:layout_alignBottom="@+id/peyed_authcode_value_text"
            android:layout_toLeftOf="@+id/peyed_authcode_value_text"
            android:textColor="@color/text_home_color"
            android:textSize="@dimen/text_size_14"
            android:text="@string/code_add" />

        <TextView
            android:id="@+id/peyed_xiangmu_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/text_home_color"
            android:textSize="@dimen/text_size_14"
            android:text="@string/project_add" />

        <TextView
            android:id="@+id/peyed_xiangmu_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/peyed_xiangmu_name_text"
            android:layout_alignBottom="@+id/peyed_xiangmu_name_text"
            android:layout_toRightOf="@+id/peyed_xiangmu_name_text"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/text_black"
            android:text="羽毛球" />

        <TextView
            android:id="@+id/peyed_date_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/peyed_xiangmu_name_text"
            android:textColor="@color/text_home_color"
            android:textSize="@dimen/text_size_14"
            android:text="@string/date_add" />

        <TextView
            android:id="@+id/peyed_date_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/peyed_date_name_text"
            android:layout_alignBottom="@+id/peyed_date_name_text"
            android:layout_toRightOf="@+id/peyed_date_name_text"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/text_black"
            android:text="2015-06-10" />

        <TextView
            android:id="@+id/peyed_price_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/peyed_price_name_text"
            android:layout_alignBottom="@+id/peyed_price_name_text"
            android:layout_alignParentRight="true"
            android:textColor="@color/main_color"
            android:text="45元" />

        <TextView
            android:id="@+id/peyed_price_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/peyed_date_value_text"
            android:layout_alignBottom="@+id/peyed_date_value_text"
            android:layout_toLeftOf="@+id/peyed_price_value_text"
            android:textColor="@color/text_home_color"
            android:textSize="@dimen/text_size_14"
            android:text="@string/money_add" />

    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/text_black" />
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
         >

             <TextView
                 android:id="@+id/payed_detail_text"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentTop="true"
                 android:background="@drawable/book_selector"
                 android:gravity="center"
                 android:paddingBottom="3dp"
                 android:paddingLeft="12dp"
                 android:paddingRight="12dp"
                 android:paddingTop="3dp"
                 android:text="图文详情" />

    </RelativeLayout>
    

</LinearLayout>