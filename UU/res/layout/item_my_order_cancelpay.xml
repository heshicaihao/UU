<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cancelpey_yundong_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_home_color"
            android:textSize="@dimen/text_size_16"
            android:text="UU运动.前进羽毛球馆" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/text_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="已取消"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/text_black" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/text_black" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
         >

        <TextView
            android:id="@+id/cancelpey_authcode_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/cancelpey_xiangmu_value_text"
            android:layout_alignBottom="@+id/cancelpey_xiangmu_value_text"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/text_black"
            android:text="暂无" />

        <TextView
            android:id="@+id/cancelpey_authcode_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/cancelpey_authcode_value_text"
            android:layout_alignBottom="@+id/cancelpey_authcode_value_text"
            android:layout_toLeftOf="@+id/cancelpey_authcode_value_text"
            android:textColor="@color/text_home_color"
            android:textSize="@dimen/text_size_14"
            android:text="@string/code_add" />

        <TextView
            android:id="@+id/cancelpey_xiangmu_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/text_home_color"
            android:textSize="@dimen/text_size_14"
            android:text="@string/project_add" />

        <TextView
            android:id="@+id/cancelpey_xiangmu_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/cancelpey_xiangmu_name_text"
            android:layout_alignBottom="@+id/cancelpey_xiangmu_name_text"
            android:layout_toRightOf="@+id/cancelpey_xiangmu_name_text"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/text_black"
            android:text="羽毛球" />

        <TextView
            android:id="@+id/cancelpey_date_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/cancelpey_xiangmu_name_text"
            android:textColor="@color/text_home_color"
            android:textSize="@dimen/text_size_14"
            android:text="@string/date_add" />

        <TextView
            android:id="@+id/cancelpey_date_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/cancelpey_date_name_text"
            android:layout_alignBottom="@+id/cancelpey_date_name_text"
            android:layout_toRightOf="@+id/cancelpey_date_name_text"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/text_black"
            android:text="2015-06-10" />

        <TextView
            android:id="@+id/cancelpey_price_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/cancelpey_price_name_text"
            android:layout_alignBottom="@+id/cancelpey_price_name_text"
            android:layout_alignParentRight="true"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_size_14"
            android:text="45元" />

        <TextView
            android:id="@+id/cancelpey_price_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/cancelpey_date_value_text"
            android:layout_alignBottom="@+id/cancelpey_date_value_text"
            android:layout_toLeftOf="@+id/cancelpey_price_value_text"
            android:textColor="@color/text_home_color"
            android:textSize="@dimen/text_size_14"
            android:text="@string/money_add" />

    </RelativeLayout>

      
    

</LinearLayout>