<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_activity" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="38.5dp"
            android:layout_marginBottom="7.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp" >

            <EditText
                android:id="@+id/old_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_search"
                android:gravity="center_vertical"
                android:hint="@string/old_password_hint"
                android:inputType="number"
                android:paddingLeft="13.3dp"
                android:paddingRight="35.6dp"
                android:singleLine="true"
                android:textColor="@color/text_home_color"
                android:textColorHint="@color/main_text_dark"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:id="@+id/old_password_delete"
                android:layout_width="16.3dp"
                android:layout_height="16.3dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13.3dp"
                android:src="@drawable/input_delete" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="38.5dp"
            android:layout_marginBottom="7.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="7.5dp" >

            <EditText
                android:id="@+id/new_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_search"
                android:gravity="center_vertical"
                android:hint="@string/new_password_hint"
                android:inputType="textPassword"
                android:paddingLeft="13.3dp"
                android:paddingRight="35.6dp"
                android:singleLine="true"
                android:textColor="@color/text_home_color"
                android:textColorHint="@color/main_text_dark"
                android:textSize="@dimen/text_size_14"/>

            <ImageView
                android:id="@+id/new_password_delete"
                android:layout_width="16.3dp"
                android:layout_height="16.3dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13.3dp"
                android:src="@drawable/input_delete" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="38.5dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="7.5dp" >

            <EditText
                android:id="@+id/new_password_to"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_search"
                android:gravity="center_vertical"
                android:hint="@string/password_to_hint"
                android:inputType="textPassword"
                android:paddingLeft="13.3dp"
                android:paddingRight="35.6dp"
                android:singleLine="true"
                android:textColor="@color/text_home_color"
                android:textColorHint="@color/main_text_dark"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:id="@+id/new_password_to_delete"
                android:layout_width="16.3dp"
                android:layout_height="16.3dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13.3dp"
                android:src="@drawable/input_delete" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/password_to_user_hint"
                android:textColor="@color/main_text_dark" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <Button
                android:id="@+id/btn_commit"
                android:layout_width="match_parent"
                android:layout_height="38.5dp"
                android:background="@drawable/bg_book_press"
                android:text="@string/commit"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>