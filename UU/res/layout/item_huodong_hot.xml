<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popular_view_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/hot_houdong_image"
        android:layout_width="match_parent"
        android:layout_height="155dip"
        android:scaleType="fitXY"
        android:src="@drawable/ad_basketball_img" />

    <TextView
        android:id="@+id/hot_houdong_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:text="南山体育馆——玩转篮球"
        android:textColor="@color/text_home_color"
        android:textSize="@dimen/text_size_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false" 
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp" >

            <TextView
                android:id="@+id/hot_houdong_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:text="周二"
                android:textColor="@color/text_home_color"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|right" >

            <TextView
                android:id="@+id/shop_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="¥35"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_size_20" />

            <TextView
                android:id="@+id/money_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="11dp"
                android:text="@string/qi"
                android:textColor="@color/main_text_dark"
                android:textSize="@dimen/text_size_13" />

            <View
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:background="@color/main_color" />

            <TextView
                android:id="@+id/market_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="11dp"
                android:paddingRight="20dp"
                android:text="¥80"
                android:textColor="@color/main_text_dark"
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>
    </LinearLayout>

 

</LinearLayout>