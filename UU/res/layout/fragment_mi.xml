<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mi_scrollview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/persen_center_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp"
            android:visibility="gone" >

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center" >

                <ImageView
                    android:id="@+id/man_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_woman_login_init" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_vertical"
                    android:background="#80FFFFFF"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/houdong_age_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_male"
                        android:drawablePadding="5dp"
                        android:text="23岁"
                        android:textColor="@color/text_home_color"
                        android:textSize="@dimen/text_size_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:background="#00ffffff"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/edit_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_edit_normal" />
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/user_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:text="王晓晓"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/person_place_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text="广东  深圳"
                android:textColor="@color/text_home_color"
                android:textSize="@dimen/text_size_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/person_signature_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="@string/person_signature_next"
                    android:textColor="@color/text_home_color"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/person_signature_value_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="今天就是爽，爽就是爽"
                    android:textColor="@color/main_text_dark"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/persen_center_unlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp" >

            <ImageView
                android:id="@+id/man_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_un_login_init" />

            <TextView
                android:id="@+id/user_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="点击登录"
                android:textColor="@color/text_home_color"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>

        <include layout="@layout/view_horizontal_line" />

        <LinearLayout
            android:id="@+id/my_order_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:drawableLeft="@drawable/ic_my_order"
                android:drawablePadding="2dp"
                android:padding="15dp"
                android:text="@string/my_order"
                android:textColor="@color/text_home_color"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/ic_turn_right" />
        </LinearLayout>

        <include layout="@layout/view_horizontal_line" />

        <LinearLayout
            android:id="@+id/my_huodong_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:drawableLeft="@drawable/ic_my_huodong"
                android:drawablePadding="2dp"
                android:padding="15dp"
                android:text="@string/my_huodong"
                android:textColor="@color/text_home_color"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/ic_turn_right" />
        </LinearLayout>

        <include layout="@layout/view_horizontal_line" />

        <LinearLayout
            android:id="@+id/my_coach_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:drawableLeft="@drawable/ic_my_coach"
                android:drawablePadding="2dp"
                android:padding="15dp"
                android:text="@string/my_coach"
                android:textColor="@color/text_home_color"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/ic_turn_right" />
        </LinearLayout>

        <include layout="@layout/view_horizontal_line" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <include layout="@layout/view_horizontal_line" />

        <LinearLayout
            android:id="@+id/my_coupon_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:drawableLeft="@drawable/ic_my_coupon"
                android:drawablePadding="2dp"
                android:padding="15dp"
                android:text="@string/my_coupon"
                android:textColor="@color/text_home_color"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/ic_turn_right" />
        </LinearLayout>

        <include layout="@layout/view_horizontal_line" />

        <LinearLayout
            android:id="@+id/my_u_mall_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:drawableLeft="@drawable/ic_my_u_mall"
                android:drawablePadding="2dp"
                android:padding="15dp"
                android:text="@string/my_u"
                android:textColor="@color/text_home_color"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/ic_turn_right" />
        </LinearLayout>

        <include layout="@layout/view_horizontal_line" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <include layout="@layout/view_horizontal_line" />

        <LinearLayout
            android:id="@+id/my_browse_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:drawableLeft="@drawable/ic_my_browse"
                android:drawablePadding="2dp"
                android:padding="15dp"
                android:text="@string/my_browse"
                android:textColor="@color/text_home_color"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/ic_turn_right" />
        </LinearLayout>

        <include layout="@layout/view_horizontal_line" />

        <LinearLayout
            android:id="@+id/my_collect_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:drawableLeft="@drawable/ic_my_collect"
                android:drawablePadding="2dp"
                android:padding="15dp"
                android:text="@string/my_collect"
                android:textColor="@color/text_home_color"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/ic_turn_right" />
        </LinearLayout>

        <include layout="@layout/view_horizontal_line" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <include layout="@layout/view_horizontal_line" />

        <LinearLayout
            android:id="@+id/seting_share_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:drawableLeft="@drawable/ic_seting_share"
                android:drawablePadding="2dp"
                android:padding="15dp"
                android:text="@string/seting_share"
                android:textColor="@color/text_home_color"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/ic_turn_right" />
        </LinearLayout>

        <include layout="@layout/view_horizontal_line" />

        <LinearLayout
            android:id="@+id/tel_me_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:drawableLeft="@drawable/ic_tel_me"
                android:drawablePadding="2dp"
                android:padding="15dp"
                android:text="@string/tel_me"
                android:textColor="@color/text_home_color"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/ic_turn_right" />
        </LinearLayout>

        <include layout="@layout/view_horizontal_line" />

        <LinearLayout
            android:id="@+id/system_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:drawableLeft="@drawable/ic_system_info"
                android:drawablePadding="2dp"
                android:padding="15dp"
                android:text="@string/system_info"
                android:textColor="@color/text_home_color"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/ic_turn_right" />
        </LinearLayout>

        <include layout="@layout/view_horizontal_line" />

        <LinearLayout
            android:id="@+id/setting_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:drawableLeft="@drawable/ic_setting"
                android:drawablePadding="2dp"
                android:padding="15dp"
                android:text="@string/setting"
                android:textColor="@color/text_home_color"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/ic_turn_right" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>